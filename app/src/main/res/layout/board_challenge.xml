<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF6EC"
    >
    <!--
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:textSize="20dp"
                android:text="오늘의 챌린지에 참여하세요!"
                android:layout_marginVertical="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginVertical="5dp"
                >
                <!-- 챌린지 카드뷰 시작 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:id="@+id/challenge1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:src="@drawable/water"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="물마시기 챌린지"
                            android:fontFamily="@font/mplus_1m_regular"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:id="@+id/challenge2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:src="@drawable/salad_challenge"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="샐러드 챌린지"
                            android:fontFamily="@font/mplus_1m_regular"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:layout_marginVertical="12dp"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/chellangeRank"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:lottie_fileName="ranking.json"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    android:scaleType="fitXY"
                    android:layout_marginStart="-10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오늘의 순위"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="챌린지 이름"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/challenge1_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물마시기 챌린지"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/challenge2_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샐러드 챌린지"
                    android:layout_marginStart="12dp"
                    />
            </LinearLayout>
            <!-- 카드 뷰 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/viewTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <!-- 순위,아이디,? -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@color/nutri"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            >
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="순위"
                                android:textColor="@color/white"
                                android:layout_marginStart="15dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:text="아이디"
                                />
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="성공횟수"
                                />
                        </LinearLayout>
                        <!-- 순위에 오른 유저 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_marginStart="15dp"
                                />
                            <TextView
                                android:id="@+id/challenge_name1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="유저아이디"
                                />
                            <TextView
                                android:id="@+id/challenge_info1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="추가 정보"
                                />
                        </LinearLayout>
                        <View
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C1C1C1"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:layout_marginStart="15dp"
                                />
                            <TextView
                                android:id="@+id/challenge_name2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="유저아이디2"
                                />
                            <TextView
                                android:id="@+id/challenge_info2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="추가 정보"
                                />
                        </LinearLayout>
                        <View
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#C1C1C1"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            >
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:layout_marginStart="15dp"
                                />
                            <TextView
                                android:id="@+id/challenge_name3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="유저아이디3"
                                />
                            <TextView
                                android:id="@+id/challenge_info3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="추가 정보"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- 댓글 목록 시작 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글 목록"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="5dp"
                    />
                <EditText
                    android:id="@+id/board_challenge_comment_editText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="댓글"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/text_view_custom"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="650dp"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <!--
    </ScrollView>
    -->
</LinearLayout>