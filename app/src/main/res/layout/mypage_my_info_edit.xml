<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Base.Theme.Nutrimateandroid"
    >
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <!-- 프로필 이미지 -->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mypage_my_info_edit_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            android:src="@drawable/ic_mypage_profile"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/mypage_my_info_edit_username_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사용자 이름"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/mypage_my_info_edit_usernick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/mplus_1m_regular"
        android:layout_gravity="center"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="5dp"
        />
    <!-- 입력창 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:boxStrokeWidth="2dp"
        app:hintEnabled="true"
        >
        <EditText
            android:id="@+id/mypage_my_info_edit_intro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="top"
            android:hint="자기소개를 입력하세요"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가 정보"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/mplus_1m_regular"
        android:layout_gravity="center"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이메일"
                android:gravity="center"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="false"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="이메일"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="일일 목표\n칼로리"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="false"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_kcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="칼로리(kcal)"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식단"
            android:textSize="20sp"
            android:fontFamily="@font/mplus_1m_regular"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <Spinner
            android:id="@+id/mypage_my_info_edit_diet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_spinner_option"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="권장하는 탄수화물, 단백질, 지방의 비율"
            android:textSize="20sp"
            android:fontFamily="@font/mplus_1m_regular"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="true"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_carbo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="탄수화물"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="true"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="단백질"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="true"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="지방"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="20sp"
            android:fontFamily="@font/mplus_1m_regular"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >
            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남성"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/radio_female"
                android:text="여성"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="키"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="true"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_tall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="키(cm)"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="몸무게"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:boxStrokeWidth="2dp"
                app:hintEnabled="true"
                >
                <EditText
                    android:id="@+id/mypage_my_info_edit_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:hint="몸무게(kg)"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일주일에 운동을 하는 횟수"
            android:textSize="20sp"
            android:fontFamily="@font/mplus_1m_regular"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            >
        <Spinner
            android:id="@+id/mypage_my_info_edit_sport"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_spinner_option"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/edit_join5"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="알레르기"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            />
        </LinearLayout>
    </LinearLayout>
    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/join_complete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="개인정보 수정"
        android:layout_margin="20dp"
        />
        </LinearLayout>
    </ScrollView>
</LinearLayout>