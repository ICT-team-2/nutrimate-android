<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:elevation="8dp"
    android:radius="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/info_recommend_nutri_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/image_test_manggom"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C3C3C3"
            android:layout_marginHorizontal="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >
            <TextView
                android:id="@+id/info_recommend_nutri_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영양제 카테고리"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/info_recommend_nutri_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영양제 제목"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginVertical="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:minHeight="5dp"
                    android:numStars="5"
                    android:rating="4.45"
                    android:stepSize="0.01"
                    android:progressBackgroundTint="#CFCFCF"
                    android:progressTint="#FFBE3B"
                    />
                <TextView
                    android:id="@+id/info_recommend_nutri_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.45"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:paddingBottom="7dp"
                >
                <Button
                    android:id="@+id/info_recommend_nutri_effect1"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:text="효과1"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:backgroundTint="#D5D3D3"
                    android:textColor="#606060"
                    android:clickable="false"
                    />
                <Button
                    android:id="@+id/info_recommend_nutri_effect2"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:text="효과2"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:backgroundTint="#D5D3D3"
                    android:textColor="#606060"
                    android:clickable="false"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>