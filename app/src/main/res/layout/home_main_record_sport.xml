<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4b704f"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/grey"
                    >
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_instagram_footer_info" />
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:completionThreshold="1"
                        android:hint="무슨 운동을 하셨나요?"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4b704f"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/sportAnimation"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:lottie_fileName="sport.json"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/total_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:text="0"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:fontFamily="@font/mplus_1m_regular"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:text=" kcal 소모했어요"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:fontFamily="@font/mplus_1m_regular"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="총 운동 시간"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="총 소모량"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                >
                                <TextView
                                    android:id="@+id/total_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text=" 분"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    android:gravity="bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                >
                                <TextView
                                    android:id="@+id/total_kcal2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text=" kcal"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    android:gravity="bottom"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 한 운동"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                    <!--
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/recordSportFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자유 입력"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="12dp"
                        android:backgroundTint="#52507855"
                        android:textColor="#023061"
                        android:textStyle="bold"
                        />
                    -->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/recordSportBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="기록 완료"
                android:layout_gravity="end"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>