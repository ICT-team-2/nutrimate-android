<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board_food_sport_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/board_food_sport_board_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="1"
                    />
                <TextView
                    android:id="@+id/board_food_sport_boid_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/board_food_sport_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="15sp"
                    android:textColor="#555555"
                    android:fontFamily="@font/mplus_1m_regular"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/board_food_sport_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="글 제목 부분입니다"
                    android:textSize="20sp"
                    android:textColor="#E4000000"
                    android:layout_marginVertical="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    />
                <TextView
                    android:id="@+id/board_food_sport_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="00:00"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/views_icon"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/board_food_sport_view_count"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="#858585"
                    android:fontFamily="@font/mplus_1m_regular"
                    android:layout_marginHorizontal="2dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>


                <!--
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment_icon"
                    android:layout_marginStart="7dp"
                    />
                <TextView
                    android:id="@+id/board_food_sport_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="#858585"
                    android:fontFamily="@font/mplus_1m_regular"
                    android:layout_marginHorizontal="5dp"
                    />
                -->

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
