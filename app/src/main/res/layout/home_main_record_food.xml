<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1d3557"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/grey"
                    >
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_instagram_footer_info" />
                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:completionThreshold="1"
                        android:hint="무슨 음식을 드셨나요?"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1d3557"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/imageView"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:lottie_fileName="food.json"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:visibility="visible"
                            />
                        <ImageView
                            android:id="@+id/imageViewSelect"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:visibility="gone"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/total_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:text="0"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:fontFamily="@font/mplus_1m_regular"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:text=" kcal 먹었어요"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:fontFamily="@font/mplus_1m_regular"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="탄수화물"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="단백질"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="지방"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                >
                                <TextView
                                    android:id="@+id/foodCarbo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text=" g"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    android:gravity="bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                >
                                <TextView
                                    android:id="@+id/foodProtein"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text=" g"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/mplus_1m_regular"
                                    android:textColor="@color/white"
                                    android:gravity="bottom"
                                    />
                            </LinearLayout><LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/foodProvi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/mplus_1m_regular"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:text=" g"
                                android:textStyle="bold"
                                android:fontFamily="@font/mplus_1m_regular"
                                android:textColor="@color/white"
                                android:gravity="bottom"
                                />
                        </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/round_corner"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    >
                    <TextView
                        android:id="@+id/menuName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침 메뉴"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                    <!--
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/recordFoodFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자유 입력"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="12dp"
                        android:backgroundTint="#e3faff"
                        android:textColor="#023061"
                        android:textStyle="bold"
                        />
                    -->
                </LinearLayout>
                <!-- 리사이클러뷰 시작 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/recordFoodBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="기록 완료"
                android:layout_gravity="end"
                android:layout_marginBottom="12dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>