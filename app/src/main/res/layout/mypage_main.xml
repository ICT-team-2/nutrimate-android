<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- 카드 뷰 시작 -->
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 프로필 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >
                <!-- 프로필 이미지 -->
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mypage_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    android:src="@drawable/ic_mypage_profile"
                    android:layout_gravity="center"
                    />
                <!--
                <ImageView
                    android:id="@+id/mypageProfile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_mypage_profile"
                    android:layout_gravity="center"
                    />
                -->
                <!-- 게시물, 팔로워, 팔로잉 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <!-- 게시물 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginVertical="15dp"
                            >
                            <TextView
                                android:id="@+id/postCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:fontFamily="@font/mplus_1m_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="게시물"
                                android:layout_marginVertical="7dp"
                                android:fontFamily="@font/mplus_1m_regular"
                                />
                        </LinearLayout>
                        <!-- 팔로워 -->
                        <LinearLayout
                            android:id="@+id/mypageFollower"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginVertical="15dp"
                            >
                            <TextView
                                android:id="@+id/followerCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:fontFamily="@font/mplus_1m_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="팔로워"
                                android:layout_marginVertical="7dp"
                                android:fontFamily="@font/mplus_1m_regular"
                                />
                        </LinearLayout>
                        <!-- 팔로잉 -->
                        <LinearLayout
                            android:id="@+id/mypageFollowing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginVertical="15dp"
                            >
                            <TextView
                                android:id="@+id/followingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:fontFamily="@font/mplus_1m_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="팔로잉"
                                android:layout_marginVertical="7dp"
                                android:fontFamily="@font/mplus_1m_regular"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 사용자 이름, 자기소개 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/userNick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사용자 이름"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/userIntro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="자기소개"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <!-- 정보공유, 피드, 북마크 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >
                <TextView
                    android:id="@+id/mypage_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="정보공유"
                    android:layout_marginVertical="7dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/mplus_1m_regular"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#C1C1C1"
                    android:layout_marginVertical="5dp"
                    />
                <TextView
                    android:id="@+id/mypage_feed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="피드"
                    android:layout_marginVertical="7dp"
                    android:fontFamily="@font/mplus_1m_regular"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#C1C1C1"
                    android:layout_marginVertical="5dp"
                    />
                <TextView
                    android:id="@+id/mypage_bookmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="북마크"
                    android:layout_marginVertical="7dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/mplus_1m_regular"
                    android:gravity="center"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
