<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- 운동 정보, 식단 정보 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#294163"
                android:paddingBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="먹었어요"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_margin="25dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="식단"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_margin="25dp"
                        android:gravity="end"
                        />
                </LinearLayout>
                <!-- 카드뷰 시작 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    >
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:alignmentMode="alignBounds"
                        >
                        <!-- 첫 번째 아이템 카드 레이아웃 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="#192E4C"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >
                                    <ImageView
                                        android:src="@drawable/apple"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:scaleType="centerInside"
                                        android:layout_gravity="center"
                                        />
                                    <ImageView
                                        android:id="@+id/recordFoodBreakfast"
                                        android:src="@drawable/ic_instagram_plus"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:backgroundTint="@color/white"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="  아침"
                                    android:textStyle="bold"
                                    android:layout_marginVertical="10dp"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- 두 번째 아이템 카드 레이아웃 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp"
                            android:backgroundTint="#192E4C"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >
                                    <ImageView
                                        android:src="@drawable/rice"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:scaleType="centerInside"
                                        android:layout_gravity="center"
                                        />
                                    <ImageView
                                        android:id="@+id/recordFoodLunch"
                                        android:src="@drawable/ic_instagram_plus"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="  점심"
                                    android:textStyle="bold"
                                    android:layout_marginVertical="10dp"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- 세 번째 아이템 카드 레이아웃 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp"
                            android:backgroundTint="#192E4C"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >
                                    <ImageView
                                        android:src="@drawable/salad"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:scaleType="centerInside"
                                        android:layout_gravity="center"
                                        />
                                    <ImageView
                                        android:id="@+id/recordFoodDinner"
                                        android:src="@drawable/ic_instagram_plus"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="  저녁"
                                    android:textStyle="bold"
                                    android:layout_marginVertical="10dp"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- 네 번째 아이템 카드 레이아웃 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp"
                            android:backgroundTint="#192E4C"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="10dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >
                                    <ImageView
                                        android:src="@drawable/cake"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:scaleType="centerInside"
                                        android:layout_gravity="center"
                                        />
                                    <ImageView
                                        android:id="@+id/recordFoodSnack"
                                        android:src="@drawable/ic_instagram_plus"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="  간식"
                                    android:textStyle="bold"
                                    android:layout_marginVertical="10dp"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 운동 카드뷰 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#396541"
                android:paddingBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 활동"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_margin="25dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="운동"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_margin="25dp"
                        android:gravity="end"
                        />
                </LinearLayout>
                <ImageView
                    android:src="@drawable/sport"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:alpha="0.8"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="20dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/consumption_icon"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 나의 칼로리 소모량"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/recordSport"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="기록하기"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#C32D5033"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>