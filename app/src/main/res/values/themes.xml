<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 베이스 테마 -->
    <style name="Base.Theme.Nutrimateandroid" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">#FAFEFA</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#606060</item>
        <item name="background">@color/white</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
        <item name="colorSurface">@color/black</item>
        <item name="cardBackgroundColor">@color/grey</item>
    </style>

    <!-- 폰트 스타일 -->
    <style name="MyfontStyle">
        <item name="android:fontFamily">@font/mplus_1m_regular</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="MyButtonStyle">
        <item name="android:backgroundTint">@color/nutri</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 다이얼로그 버튼 textColor 변경 -->
    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialButtonStyle">@style/CustomAlertDialogButtonStyle</item>
    </style>
    <style name="CustomAlertDialogButtonStyle" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Nutrimateandroid" parent="Base.Theme.Nutrimateandroid" />
</resources>
